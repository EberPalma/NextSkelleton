{
  "extends": [
    "./node_modules/standard/eslintrc.json",
    "next/core-web-vitals"
  ],
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      4
    ],
    "semi": 0,
    "quotes": [
      "double"
    ],
    "brace-style": [
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": true,
        "objectsInObjects": true
      }
    ],
    "object-curly-newline": [
      "error",
      "never"
    ]
  }
}